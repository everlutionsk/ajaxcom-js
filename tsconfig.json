{
  "extends": "@deftomat/opinionated/configs/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["ES2021", "DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": "src",
    "declaration": false,
    "declarationMap": false,
    "outDir": "dist",
    "isolatedModules": true
